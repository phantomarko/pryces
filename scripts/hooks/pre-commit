#!/bin/bash
# Pre-commit hook: Auto-format staged Python files with Black

# Get list of staged Python files
STAGED_PY_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$')

# Exit early if no Python files staged
if [ -z "$STAGED_PY_FILES" ]; then
    exit 0
fi

# Activate virtual environment
if [ -f "venv/bin/activate" ]; then
    source venv/bin/activate
elif [ -f ".venv/bin/activate" ]; then
    source .venv/bin/activate
else
    echo "Warning: Virtual environment not found. Using system Python."
fi

# Check if Black is installed
if ! command -v black &> /dev/null; then
    echo "Error: Black is not installed. Run: pip install -e \".[dev]\""
    exit 1
fi

# Format staged files with Black
echo "Running Black formatter on staged files..."
echo "$STAGED_PY_FILES" | xargs black

# Re-stage formatted files
echo "$STAGED_PY_FILES" | xargs git add

echo "âœ“ Black formatting complete. Files auto-staged."
exit 0
